{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": false,
    "typeRoots": ["node_modules/@types", "e2e"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "e2e/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
